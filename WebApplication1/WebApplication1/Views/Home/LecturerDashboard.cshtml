@model  WebApplication1.ViewModel.LecModuleViewModel
@{
    ViewBag.Title = "LecturerDashboard";
    Layout = "~/Views/Shared/_LayoutLecturer.cshtml";
}

<h2>LecturerDashboard</h2>



<div class="row">

    @foreach (var item in Model.LecModule)
    {
       
        <div class="col-lg-3 col-md-6 col-sm-6">
            <a href="../Home/LectureDashboard?id=@item.id">
                <div class="card card-stats">
                    <div class="card-header card-header-primary card-header-icon" >
                        <div class="card-icon" style="width:30px">
                          
                        </div>
                        <p class="card-category"><h3 style="color:orangered;">@item.moduleName</h3> </p>
                        <h4 class="card-title" style = "color:green;">Intake @item.intake </h4>
                        

                    </div>

                </div>
            </a>
        </div>
        

    }
</div>
    <br />
